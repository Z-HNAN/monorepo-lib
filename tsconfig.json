{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/", // 打包到的目录
    "sourceMap": false, // 是否生成sourceMap（用于浏览器调试）
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "declaration": true, // 是否生成声明文件
    "declarationDir": "./types/",
    "declarationMap": false, // 是否生成声明文件map文件（便于调试）
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext", // 转化成的目标语言
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "allowJs": false
  },
  "include": [
    "packages/*/src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "tests/**/*.ts",
  ],
}